currentBuild.displayName="learndevops-#"+BUILD_NUMBER
pipeline{
   agent { label 'slave'}
   environment {
     PATH = "/opt/maven/bin:$PATH"
     }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('checkout'){
            steps{
               checkout([$class: 'GitSCM', 
               branches: [[name: '*/dev']],
               extensions: [], 
               userRemoteConfigs: [
                   [credentialsId: 'github', url: 'https://github.com/Bhanukiran213/hello-world-war.git']]]) 
            }
        }
        stage('build'){
           steps{
               sh 'mvn package'
           }
        }
       stage('Artifactory upload'){
           steps{
               nexusArtifactUploader artifacts: [
                   [
                       artifactId: '>hello-world-war', 
                       classifier: '', 
                       file: '/target/hello-world-war-2.0.3.war', 
                       type: 'war']
                       ], 
                       credentialsId: 'kiran-cred', 
                       groupId: 'com.efsavage', 
                       nexusUrl: '3.108.217.205:8081', 
                       nexusVersion: 'nexus3', 
                       protocol: 'http',
                       repository: 'learndevops', 
                       version: '2.0.3'
           }
       }
       stage('deoloy'){
            steps{
                deploy adapters: 
                [
                    tomcat8(credentialsId: 'tomcat', 
                    path: '', 
                    url: 'http://52.66.213.162:8080/')], 
                    contextPath: 'hello', 
                    war: '**/target/*.war'
            }
        }
    }
}
